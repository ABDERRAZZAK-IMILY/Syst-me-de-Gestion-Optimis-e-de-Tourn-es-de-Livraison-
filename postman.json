{
	"info": {
		"_postman_id": "COLLECTION_ID",
		"name": "Delivery Optimizer API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Vehicles",
			"item": [
				{
					"name": "Create Vehicle",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"licensePlate\": \"VAN-TEST-01\",\n  \"type\": \"VAN\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/vehicles",
							"host": ["{{baseUrl}}"],
							"path": ["vehicles"]
						},
						"description": "Create a new vehicle. The type must be BIKE, VAN, or TRUCK."
					},
					"response": []
				},
				{
					"name": "Get Vehicle By ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/vehicles/1",
							"host": ["{{baseUrl}}"],
							"path": ["vehicles", "1"]
						},
						"description": "Retrieve a vehicle by its ID. Change the number 1 in the URL."
					},
					"response": []
				},
				{
					"name": "Get All Vehicles",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/vehicles",
							"host": ["{{baseUrl}}"],
							"path": ["vehicles"]
						},
						"description": "Retrieve a list of all vehicles."
					},
					"response": []
				},
				{
					"name": "Delete Vehicle By ID",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/vehicles/1",
							"host": ["{{baseUrl}}"],
							"path": ["vehicles", "1"]
						},
						"description": "Delete a vehicle by its ID. Change the number 1 in the URL."
					},
					"response": []
				}
			]
		},
		{
			"name": "Deliveries",
			"item": [
				{
					"name": "Create Delivery",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"longitude\": -8.0083,\n  \"latitude\": 31.63,\n  \"weightKg\": 10.5,\n  \"volumeM3\": 0.1,\n  \"preferredTimeWindow\": \"10:00-12:00\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/deliveries",
							"host": ["{{baseUrl}}"],
							"path": ["deliveries"]
						},
						"description": "Create a new delivery. The status will automatically be PENDING."
					},
					"response": []
				},
				{
					"name": "Get Delivery By ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/deliveries/1",
							"host": ["{{baseUrl}}"],
							"path": ["deliveries", "1"]
						},
						"description": "Retrieve a delivery by its ID. Change the number 1 in the URL."
					},
					"response": []
				},
				{
					"name": "Get All Deliveries",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/deliveries",
							"host": ["{{baseUrl}}"],
							"path": ["deliveries"]
						},
						"description": "Retrieve a list of all deliveries."
					},
					"response": []
				},
				{
					"name": "Update Delivery Status",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "\"DELIVERED\""
						},
						"url": {
							"raw": "{{baseUrl}}/deliveries/1/status",
							"host": ["{{baseUrl}}"],
							"path": ["deliveries", "1", "status"]
						},
						"description": "Update the status of a delivery. Change the number 1 in the URL. The value in the body must be IN_TRANSIT, DELIVERED, or FAILED. (Note: You need to add this endpoint in DeliveryController.)"
					},
					"response": []
				},
				{
					"name": "Delete Delivery By ID",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/deliveries/1",
							"host": ["{{baseUrl}}"],
							"path": ["deliveries", "1"]
						},
						"description": "Delete a delivery by its ID. Change the number 1 in the URL."
					},
					"response": []
				}
			]
		},
		{
			"name": "Tours",
			"item": [
				{
					"name": "Optimize Tour",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"vehicleId\": 1,\n  \"warehouseId\": 1,\n  \"deliveryIds\": [1, 2, 3]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/tours/optimize",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "tours", "optimize"]
						},
						"description": "Create an optimized tour. Change the IDs as needed. You must create at least one warehouse first."
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		}
	]
}
